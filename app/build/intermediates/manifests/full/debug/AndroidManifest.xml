<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akant.grabhousesecure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.akant.grabhousesecure.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.akant.grabhousesecure.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.akant.grabhousesecure.SellerLandingActivity"
            android:label="@string/title_activity_seller_landing" >
        </activity>
        <activity
            android:name="com.example.akant.grabhousesecure.BuyerLandingActivity"
            android:label="@string/title_activity_buyer_landing" >
        </activity>
        <activity
            android:name="com.example.akant.grabhousesecure.PropertyLanding"
            android:label="@string/title_activity_property_landing" >
        </activity>
        <activity
            android:name="com.example.akant.grabhousesecure.KeyLandingActivity"
            android:label="@string/title_activity_key_landing" >
        </activity>
    </application>

</manifest>